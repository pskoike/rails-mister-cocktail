<%= render 'banner'%>
<div class="container" id="list-cocktails">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1>See all <strong><%= Cocktail.count %></strong> Cocktails</h1>
      <p>Pick one and try</p>
      <!-- <%= link_to "Create Coacktail", new_cocktail_path, class: 'btn btn-default' %> -->
    </div>
    </div>
    <div class="row">

      <!-- <% @cocktails.each do |c| %>
      <p><%= link_to c.name, cocktail_path(c.id) %></p>
      <% end %> -->
      <div class="col-sm-8 col-sm-offset-2">
      <% @cocktails.each do |c| %>

        <div class="media">
          <div class="media-left">
              <% if c.photo? %>
              <%= cl_image_tag c.photo.path, width: 64, height: 64, crop: :fill %>
              <% end %>

          </div>
          <div class="media-body">
            <h4 class="media-heading"><%= link_to c.name, cocktail_path(c.id) %></h4>
            <%c.doses.each do |d| %>
              <p><%= d.description %> - <%= d.ingredient.name %></p>
            <% end %>
          </div>
        </div>
        <hr>
        <% end %>
    </div>
  </div>
