<div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
      <h1><%= @cocktail.name %>  <%= link_to "Add dose",  new_cocktail_dose_path(@cocktail), class: 'btn btn-success btn-xs' %></h1>
      <% @cocktail.doses.each do |dose| %>
        <ul>
          <li><%= dose.description %> - <%= dose.ingredient.name %> | <%= link_to "X",    cocktail_dose_path(@cocktail, dose.id), class: 'btn btn-danger btn-xs', method: :delete %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
